<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="@style/title_app"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    />
    <TextView
        android:id="@+id/tv_main_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weather"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_form"
        android:layout_marginBottom="@dimen/margin_form">


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_event"
        android:layout_marginBottom="40dp"
        style="@style/subtitle_app"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_form"
        android:layout_marginBottom="@dimen/margin_form">



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_add_task_valid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_task"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/white"



            />

        <View
            android:layout_width="@dimen/default_margin_btn"
            android:layout_height="0dp"
            />



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_task_list"
        android:layout_marginTop="20dp"
        style="@style/subtitle_app"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lv_main_task_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        />


</LinearLayout>